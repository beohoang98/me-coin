    <script>
      window.app = angular.module("BlockExplorer", []);

      const publicKey = localStorage.getItem("publicKey");

      if (!publicKey) {
        window.location.href = "./login.html";
      }

      ////////////////////////////////////////////////////////////////////
      app.controller("walletController", function ($scope, $http) {
        $scope.addressData = localStorage.getItem("publicKey");
        $scope.amount = 0;
        $scope.lastBlock = "None";

        $scope.init = (function () {
          $http.get(`/address-info/${$scope.addressData}`).then((response) => {
            $scope.amount = response.data.amount;
            $scope.lastBlock = response.data.lastBlock;
          });
        })();
      });

      ///////////////////////////////////////////////////////////////////
      app.controller("transactionController", function ($scope, $http) {
        $scope.acceptedTransaction = null;
        $scope.declineTransaction = null;

        $scope.transactionCoins = function (
          amountToTransfer,
          pubKeyOfRecipient
        ) {
          const pubKey = localStorage.getItem("publicKey");
          const privKey = localStorage.getItem("privateKey");

          $http({
            url: "/transaction/broadcast",
            method: "POST",
            data: {
              amount: amountToTransfer,
              sender: pubKey,
              recipient: pubKeyOfRecipient,
              privKey: privKey,
            },
          }).then(
            function (response) {
              console.log("success");
              $("#mineButton").attr("disabled", false);
              $scope.acceptedTransaction = true;
              $scope.declineTransaction = false;
              //console.log(response.data.note);
              if (response.data.note === false) {
                $scope.acceptedTransaction = false;
                $scope.declineTransaction = true;
                console.log(response.data.note);
              }
              //console.log($scope.acceptedTransaction);
            },
            function (response) {
              $scope.acceptedTransaction = false;
              $scope.declineTransaction = true;
              console.log("failed");
            }
          );
        };
      });
    </script>

