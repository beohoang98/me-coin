            </div>

            <!-- Content Row -->
            <div class="row" ng-controller="walletController">
              <!-- Earnings (Monthly) Card Example -->
              <div class="col mb-4">
                <div class="card border-left-primary shadow h-100 py-2">
                  <div class="card-body">
                    <div class="row no-gutters align-items-center">
                      <div class="col mr-2">
                        <div
                          class="
                            text-xs
                            font-weight-bold
