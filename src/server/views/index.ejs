                <!-- Begin Page Content -->
                <div class="container-fluid">
            
                    <!-- Page Heading -->
                    <div class="d-sm-flex align-items-center justify-content-between mb-4">
                        <h1 class="h3 mb-0 text-gray-800">Dashboard</h1>
                    </div>

                    <!-- Content Row -->
                    <div class="row" ng-controller="walletController">
                        <!-- Earnings (Monthly) Card Example -->
                        <div class="col mb-4">
                            <div class="card border-left-primary shadow h-100 py-2">
                                <div class="card-body">
                                    <div class="row no-gutters align-items-center">
                                        <div class="col mr-2">
                                            <div class="text-xs font-weight-bold text-primary text-uppercase mb-1">
                                                Address</div>
                                            <div class="h5 mb-0 font-weight-bold text-gray-800 break-word">{{addressData}}</div>
                                        </div>
                                        <div class="col-auto">
                                            <i class="fas fa-calendar fa-2x text-gray-300"></i>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>

                        <!-- Earnings (Monthly) Card Example -->
                        <div class="col mb-4">
                            <div class="card border-left-success shadow h-100 py-2">
                                <div class="card-body">
                                    <div class="row no-gutters align-items-center">
                                        <div class="col mr-2">
                                            <div class="text-xs font-weight-bold text-success text-uppercase mb-1">
                                                Balance</div>
                                            <div class="h5 mb-0 font-weight-bold text-gray-800">$ {{amount}}</div>
                                        </div>
                                        <div class="col-auto">
                                            <i class="fas fa-dollar-sign fa-2x text-gray-300"></i>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>

                        <!-- Earnings (Monthly) Card Example -->
                        <div class="col mb-4">
                            <div class="card border-left-info shadow h-100 py-2">
                                <div class="card-body">
                                    <div class="row no-gutters align-items-center">
                                        <div class="col mr-2">
                                            <div class="text-xs font-weight-bold text-info text-uppercase mb-1">Network
                                            </div>
                                            <div class="row no-gutters align-items-center">
                                                <div class="col-auto">
                                                    <div class="h5 mb-0 mr-3 font-weight-bold text-gray-800">Last block# : {{lastBlock}}</div>
                                                </div>
                                            </div>
                                        </div>
                                        <div class="col-auto">
                                            <i class="fas fa-clipboard-list fa-2x text-gray-300"></i>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>

                    <!-- Content Row -->
                    <div class="card shadow mb-4" ng-controller="blockHistoryController">
                        <div class="card-header py-3">
                            <h6 class="m-0 font-weight-bold text-primary">Latest Blocks</h6>
                        </div>
                        <div class="card-body">
                            <div class="table-responsive">
                                <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                                    <thead>
                                        <tr>
                                            <th>idx</th>
                                            <th>date</th>
                                            <th>nonce</th>
                                            <th>hash</th>
                                            <th>previousHash</th>
                                        </tr>
                                    </thead>
                                    <tfoot>
                                        <tr>
                                            <th>idx</th>
                                            <th>date</th>
                                            <th>nonce</th>
                                            <th>hash</th>
                                            <th>previousHash</th>
                                        </tr>
                                    </tfoot>
                                    <tbody>                                 
                                        <tr class="col-2 text-truncate" ng-repeat="block in blocks track by $index">
                                            <td class="text-truncate">
                                                <div style="width: 50px;" class="text-truncate">
                                                    {{ block.idx }}
                                                </div>
                                            </td>
                                            <td class="text-truncate">
                                                <div style="width: 150px;" class="text-truncate">
                                                    {{ block.date }}
                                                </div>
                                            </td>
                                            <td class="text-truncate">
                                                <div style="max-width: 300px;" class="text-truncate">
                                                    {{ block.nonce }}
                                                </div>
                                            </td>
                                            <td class="text-truncate">
                                                <div style="width: 300px;" class="text-truncate">
                                                    {{ block.hash }}
                                                </div>
                                            </td>
                                            <td class="text-truncate"> 
                                                <div style="width: 300px;" class="text-truncate">
                                                    {{ block.previousHash }}
                                                </div>
                                            </td>
                                        </tr>
                                    </tbody>
                                </table>
                            </div>
                        </div>
                    </div>

                    <div class="card shadow mb-4" ng-controller="transactionHistoryController">
                        <div class="card-header py-3">
                            <h6 class="m-0 font-weight-bold text-primary">Latest Transactions</h6>
                        </div>
                        <div class="card-body">
                            <div class="table-responsive">
                                <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                                    <thead>
                                        <tr>
                                            <th>transactionID</th>
                                            <th>amount</th>
                                            <th>date</th>
                                            <th>sender</th>
                                            <th>recipient</th>
                                        </tr>
                                    </thead>
                                    <tfoot>
                                        <tr>
                                            <th>transactionID</th>
                                            <th>amount</th>
                                            <th>date</th>
                                            <th>sender</th>
                                            <th>recipient</th>
                                        </tr>
                                    </tfoot>
                                    <tbody>                                 
                                        <tr class="col-2 text-truncate" ng-repeat="transaction in transactions track by $index">
                                            <td class="text-truncate">
                                                <div style="width: 150px;" class="text-truncate">
                                                    {{ transaction.transactionId }}
                                                </div>
                                            </td>
                                            <td class="text-truncate">
                                                <div style="width: 50px;" class="text-truncate">
                                                    {{ transaction.amount }}
                                                </div>
                                            </td>
                                            <td class="text-truncate">
                                                <div style="max-width: 300px;" class="text-truncate">
                                                    {{ transaction.date }}
                                                </div>
                                            </td>
                                            <td class="text-truncate">
                                                <div style="width: 300px;" class="text-truncate">
                                                    {{ transaction.sender }}
                                                </div>
                                            </td>
                                            <td class="text-truncate"> 
                                                <div style="width: 300px;" class="text-truncate">
                                                    {{ transaction.recipient }}
                                                </div>
                                            </td>
                                        </tr>
                                    </tbody>
                                </table>
                            </div>
                        </div>
                    </div>

                    <div class="card shadow mb-4" ng-controller="pendingTransactionHistoryController">
                        <div class="card-header py-3">
                            <h6 class="m-0 font-weight-bold text-primary">Pending Transactions</h6>
                        </div>
                        <div class="card-body">
                            <div class="table-responsive">
                                <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                                    <thead>
                                        <tr>
                                            <th>transactionID</th>
                                            <th>amount</th>
                                            <th>date</th>
                                            <th>sender</th>
                                            <th>recipient</th>
                                        </tr>
                                    </thead>
                                    <tfoot>
                                        <tr>
                                            <th>transactionID</th>
                                            <th>amount</th>
                                            <th>date</th>
                                            <th>sender</th>
                                            <th>recipient</th>
                                        </tr>
                                    </tfoot>
                                    <tbody>                                 
                                        <tr class="col-2 text-truncate" ng-repeat="transaction in pendingTransactions track by $index">
                                            <td class="text-truncate">
                                                <div style="width: 150px;" class="text-truncate">
                                                    {{ transaction.transactionId }}
                                                </div>
                                            </td>
                                            <td class="text-truncate">
                                                <div style="width: 50px;" class="text-truncate">
                                                    {{ transaction.amount }}
                                                </div>
                                            </td>
                                            <td class="text-truncate">
                                                <div style="max-width: 300px;" class="text-truncate">
                                                    {{ transaction.date }}
                                                </div>
                                            </td>
                                            <td class="text-truncate">
                                                <div style="width: 300px;" class="text-truncate">
                                                    {{ transaction.sender }}
                                                </div>
                                            </td>
                                            <td class="text-truncate"> 
                                                <div style="width: 300px;" class="text-truncate">
                                                    {{ transaction.recipient }}
                                                </div>
                                            </td>
                                        </tr>
                                    </tbody>
                                </table>
                            </div>
                        </div>
                    </div>

                </div>
                <!-- /.container-fluid -->

            </div>
            <!-- End of Main Content -->

            <!-- Footer -->
            <footer class="sticky-footer bg-white mrTop-40">
                <div class="container my-auto">
                    <div class="copyright text-center my-auto">
                        <span>Copyright &copy; Your Website 2021</span>
                    </div>
                </div>
            </footer>
            <!-- End of Footer -->

        </div>
        <!-- End of Content Wrapper -->

    </div>
    <!-- End of Page Wrapper -->

    <!-- Scroll to Top Button-->
    <a class="scroll-to-top rounded" href="#page-top">
        <i class="fas fa-angle-up"></i>
    </a>

    <!-- Logout Modal-->
    <div class="modal fade" id="logoutModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel"
        aria-hidden="true">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="exampleModalLabel">Ready to Leave?</h5>
                    <button class="close" type="button" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">×</span>
                    </button>
                </div>
                <div class="modal-body">Select "Logout" below if you are ready to end your current session.</div>
                <div class="modal-footer">
                    <button class="btn btn-secondary" type="button" data-dismiss="modal">Cancel</button>
                    <a class="btn btn-primary" href="login.html">Logout</a>
                </div>
            </div>
        </div>
    </div>

    <script defer>
        const publicKey = `<%- publicKey %>`;
        const privateKey = `<%- privateKey %>`;
        const walletAddress = `<%- walletAddress %>`;

        window.app = angular.module('BlockExplorer', []);

        ////////////////////////////////////////////////////////////////////
        app.controller('walletController', function ($scope, $http) {
            $scope.addressData = walletAddress;
            $scope.amount = 0;
            $scope.lastBlock = 'None';

            $scope.init = function () {
                $http.get(`/api/address-info/${$scope.addressData}`)
                    .then(response => {
                        $scope.amount = response.data.amount;
                        $scope.lastBlock = response.data.lastBlock;
                    });
            }();
        });

        ///////////////////////////////////////////////////////////////////
        app.controller('blockHistoryController', function ($scope, $http) {
            $scope.addressData = walletAddress;

            $scope.init = function () {
                $http.get(`/api/lasted-blocks/${$scope.addressData}`)
                    .then(response => {
                        $scope.blocks = response.data.blocks;
                    });
            }();
        });

        ///////////////////////////////////////////////////////////////////
        app.controller('transactionHistoryController', function ($scope, $http) {
            $scope.addressData = walletAddress;

            $scope.init = function () {
                $http.get(`/api/lasted-transactions/${$scope.addressData}`)
                    .then(response => {
                        $scope.transactions = response.data.transactions;
                    });
            }();
        });

        ///////////////////////////////////////////////////////////////////
        app.controller('pendingTransactionHistoryController', function ($scope, $http) {
            $scope.addressData = walletAddress;

            $scope.init = function () {
                $http.get(`/api/pending-transactions/${$scope.addressData}`)
                    .then(response => {
                        $scope.pendingTransactions = response.data.pendingTransactions;
                    });
            }();
        });
    </script>
</body>

</html>